<!doctype html>
<html>

    <head>
        <title>Node Authentication</title>
        <script type="text/javascript" src="static/js/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="static/css/bootstrap.min.cdn.css" >

        <style>
            body {
                padding-top: 80px;
            }
        </style>
        <script language="javascript" type="text/javascript">
            $(document).ready(function () {
                $("#newUser").click(function (event) {

                    if (document.loginForm.password.value !== document.loginForm.passwordCheck.value) {
                        alert("Email or Password is incorrect. Please, try again.");

                        event.preventDefault();
                    }

                });

            });
        </script>
    </head>

    <body>
        <div class="container">

            <div class="col-sm-6 col-sm-offset-3">

                <h1>Sign Up</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>

                <!-- LOGIN FORM -->
                <form name="loginForm" action="/api/users/signup" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label>Password check</label>
                        <input type="password" class="form-control" name="passwordCheck">
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg" id="newUser">Sign Up</button>
                </form>

                <hr>

                <p>Already have an account? <a href="/login">Login</a></p>
                <p><a href="/">Main Page</a></p>

            </div>

        </div>
    </body>

</html>
