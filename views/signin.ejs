<!doctype html>
<html>

    <head>
        <title>Login</title>
        <link rel="stylesheet" type="text/css" href="static/css/bootstrap.min.cdn.css" >    
        <style>
            body {
                padding-top: 80px;
            }
        </style>
    </head>

    <body>
        <div class="container">

            <div class="col-sm-6 col-sm-offset-3">

                <h1><span class="fa fa-sign-in"></span> Sign In</h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/api/users/SignIn" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Sign In</button>
                </form>

                <hr>
                <p>Want to create a new account? <a href="/Register">Register</a></p>
                <p><a href="/">Main Page</a></p>

            </div>

        </div>

    </body>

</html>
